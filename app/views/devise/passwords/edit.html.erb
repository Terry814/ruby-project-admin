<% content_for :title, "Change your password" %>
<% content_for :body_class, "page-signup" %>
<% content_for :container_class, "signup-container" %>

<!-- Header -->
<div class="signup-header">
  <%= link_to root_path, class: "logo" do %>
    <%= image_tag('logo_40high.png', style: "margin-top: -5px;") %>
  <% end %>
  <div class="slogan">
    Beautiful. Powerful. Mobile Apps Made Easy.
  </div> <!-- / .slogan -->
</div>
<!-- / Header -->

<!-- Form -->
<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="signup-text">
      <span>Change your password</span>
    </div>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group w-icon">
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
      <span class="fa fa-lock signup-form-icon"></span>
    </div>

    <div class="form-group w-icon">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Confirm new password" %>
      <span class="fa fa-lock signup-form-icon"></span>
    </div>

    <div class="form-actions">
      <%= f.submit "Change my password", class: "signup-btn bg-primary" %>
    </div>
  <% end %>
  <!-- / Form -->
</div>
<!-- Right side -->

<% content_for :after_container do %>
  <div class="have-account">
    <%= link_to "Sign In", new_session_path(resource_name) %>
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    var $ph  = $('#page-signup-bg'),
        $img = $ph.find('> img');

    $(window).on('resize', function () {
      $img.attr('style', '');
      if ($img.height() < $ph.height()) {
        $img.css({
          height: '100%',
          width: 'auto'
        });
      }
    });
  });
</script>