<%= simple_form_for [@social_stream, @new_source_account], url: app_settings_social_stream_accounts_path, remote: true, html: {id: 'twitter-user-form'} do |f| %>
  <%= f.input :service, input_html: {value: 'twitter'}, as: :hidden %>
  <%= f.input :form_id, input_html: {value: 'twitter-user-form'}, as: :hidden %>
  
  <%= resource_error_messages! @new_source_account %> 
  <div class="form-group">
    <%= f.input :username, placeholder: "Username", required: true, wrapper: :if4 %>
    <%= f.input :list_name, placeholder: "List name (optional)", wrapper: :if4 %>
    <%= submit_tag "Add user", class: "btn btn-primary" %>
  </div>
<% end %>
